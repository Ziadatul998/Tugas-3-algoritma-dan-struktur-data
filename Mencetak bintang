pyhton:n = 8
for i in range(n):
    for j in range(i+1):
        print(" ", end=" ")
    for j in range (i,n):
        print("*",end=" ")
    print()        
pseudocode: START
FOR i FROM 7 DOWNTO 1 DO
    PRINT SPACE (7 - i)
    PRINT '*' WITH SPACE FOR i TIMES
    PRINT NEW LINE
END FOR
END 
