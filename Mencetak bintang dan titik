pyhton: n=6
print(" " * n + "*")
for i in range(1, n + 1):
    print(" " * (n - i), end="")
    for j in range(i):
        print("*", end=".")
    print("*")    
pseudocode: START
FOR i FROM 1 TO 5 DO
    PRINT SPACE (5 - i)
    PRINT '*.' FOR i TIMES
    PRINT NEW LINE
END FOR
